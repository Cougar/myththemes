<mythuitheme>
    <window name="iconimport">

        <imagetype name="background">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/</filename>
        </imagetype>

        <textarea name="name">
            <area>100,15,1080,30</area>
            <align>center</align>
            <font>basemedium</font>
            <value>Select an Icon</value>
        </textarea>

        <imagetype name="previewdrop">
            <area>0,230,1280,410</area>
            <filename>images/pbb_preview_backdrop.png</filename>
        </imagetype>

        <buttonlist name="icons">
            <area>0,245,1280,380</area>
            <buttonarea>0,0,1280,390</buttonarea>
            <scrollstyle>free</scrollstyle>
            <layout>grid</layout>
            <spacing>0</spacing>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,160,90</area>
                    <imagetype name="icon">
                        <area>0,0,160,90</area>
                        <filename>images/43corrector.png</filename>
                    </imagetype>
                </state>
                <state name="selected">
                    <area>-30,-30,220,150</area>
                    <imagetype name="buttonbackground">
                        <area>0,0,220,150</area>
                        <filename>images/pbb_recording_underlay.png</filename>
                        <alphapulse min="80" max="255" change="2"/>
                    </imagetype>
                    <imagetype name="icon">
                        <area>10,10,200,130</area>
                        <filename />
                        <mask>images/pbb_recording_mask.png</mask>
                    </imagetype>
                </state>
                <state name="inactive" from="active">
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>1200,420</position>
                <state type="off">
                    <imagetype name="upon">
                        <filename>images/uparrow.png</filename>
                        <alpha>50</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>images/uparrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>1250,420</position>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>images/downarrow.png</filename>
                        <alpha>50</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>images/downarrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="manuallabel" from="basetextarea">
            <area>240,110,300,25</area>
            <value>Search terms:</value>
            <align>right</align>
        </textarea>

        <textedit name="manualsearch" from="basetextedit">
            <position>550,105</position>
        </textedit>

        <button name="search" from="basebutton">
            <position>480,158</position>
            <value>Search</value>
        </button>

        <button name="skip" from="basebutton">
            <position>660,158</position>
            <value>Skip</value>
        </button>

        <imagetype name="clockback">
            <area>525,695,230,51</area>
            <filename>images/clock_backdrop.png</filename>
        </imagetype>

        <font name="clock" from="baseextrasmall">
            <size>11</size>
            <color>#FFFFFF</color>
        </font>

        <clock name="clock">
            <area>529,700,219,25</area>
            <font>clock</font>
            <format>%DATE%, %TIME%</format>
            <align>center</align>
            <alpha>255</alpha>
        </clock>

        <imagetype name="clockbackoverlay">
            <area>525,695,230,23</area>
            <filename>images/clock_backdrop_overlay.png</filename>
        </imagetype>

    </window>

    <window name="channeloverview">
        <area>0,0,1920,1080</area>

        <imagetype name="fanart">
            <area>0,0,1920,1080</area>
            <filename>Backgrounds/</filename>
        </imagetype>

        <imagetype name="leftpanel_bg">
            <position>-20,0</position>
            <filename>images/editmetadata_leftpanel_bg.png</filename>
        </imagetype>

        <shape name="panel_dark">
            <area>0,0,768,1080</area>
            <fill color="#000000" alpha="80" />
        </shape>

        <shape name="infobox">
            <area>35,324,694,600</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
        </shape>

        <textarea name="title" from="basetextarea">
            <area>45,334,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
            <value>Edit Channels</value>
        </textarea>

        <textarea name="subtitle" from="basetextarea">
            <area>45,385,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <value>Modify, Add, and Delete television channels.</value>
        </textarea>

        <!-- Widgets -->

        <buttonlist name="channels">
            <area>786,90,1136,980</area>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>vertical</layout>
            <spacing>2</spacing>
            <drawfrombottom>true</drawfrombottom>
            <buttonarea>0,0,100%,990</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,100%,89</area>
                    <shape name="item">
                        <area>0,0,100%,89</area>
                        <type>box</type>
                        <fill color="#000000" alpha="180" />
                        <line color="#000000" alpha="180" width="-1"/>
                    </shape>
                    <imagetype name="buttonimage">
                        <area>10,10,90,69</area>
                        <preserveaspect>true</preserveaspect>
                    </imagetype>
                    <textarea name="name">
                        <area>110,10,930,40</area>
                        <align>left,vcenter</align>
                        <font>basemedium</font>
                        <alpha>160</alpha>
                    </textarea>
                    <textarea name="sourcename">
                        <area>130,56,500,30</area>
                        <align>left,vcenter</align>
                        <font>basesmall</font>
                        <alpha>160</alpha>
                    </textarea>
                    <textarea name="channum">
                        <area>737,56,387,30</area>
                        <align>right,vcenter</align>
                        <font>basesmall</font>
                        <alpha>160</alpha>
                    </textarea>
                    <imagetype name="divider">
                        <area>0,88,1136,2</area>
                        <filename>images/baserecordinglistwide_divider.png</filename>
                        <alpha>100</alpha>
                    </imagetype>
                </state>
                <state name="selected" from="active">
                    <shape name="item">
                        <fill color="#0767AB" alpha="240" />
                    </shape>
                    <textarea name="name">
                        <alpha>200</alpha>
                    </textarea>
                    <textarea name="sourcename">
                        <alpha>200</alpha>
                    </textarea>
                    <textarea name="channum">
                        <alpha>200</alpha>
                    </textarea>
                    <imagetype name="divider">
                        <filename />
                    </imagetype>
                </state>
                <state name="inactive" from="active" />
            </statetype>
            <statetype name="upscrollarrow">
                <position>1075,-30</position>
                <state type="off">
                </state>
                <state type="full">
                    <imagetype name="upon">
                        <filename>images/arclight_popup_uparrow.png</filename>
                        <alpha>230</alpha>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>1057,-30</position>
                <state type="off">
                </state>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>images/arclight_popup_downarrow.png</filename>
                        <alpha>230</alpha>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="sortby" from="basetextarea">
            <area>40,461,150,40</area>
            <align>right,vcenter</align>
            <value>Sort By:</value>
        </textarea>

        <buttonlist name="sorting" from="basewideselector">
            <position>202,461</position>
            <spacing>0</spacing>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
        </buttonlist>

        <textarea name="vidsource" from="basetextarea">
            <area>40,523,150,40</area>
            <align>right,vcenter</align>
            <value>Video Source:</value>
        </textarea>

        <buttonlist name="source" from="basewideselector">
            <position>202,523</position>
            <spacing>0</spacing>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
        </buttonlist>

        <button name="delete" from="basebuttonwide">
            <position>202,585</position>
            <value>Delete Source</value>
            <helptext></helptext>
        </button>

        <button name="scan" from="basebuttonwide">
            <position>202,647</position>
            <value>Channel Scan</value>
            <helptext></helptext>
        </button>

        <button name="importicons" from="basebuttonwide">
            <position>202,709</position>
            <value>Import Icons</value>
            <helptext></helptext>
        </button>

        <button name="edittransport" from="basebuttonwide">
            <position>202,771</position>
            <value>Edit Transports</value>
            <helptext></helptext>
        </button>

        <textarea name="nochannumlabel" from="basetextarea">
            <area>202,850,500,60</area>
            <value>Hide Channels without channel number.</value>
        </textarea>

        <checkbox name="nochannum" from="basecheckbox">
            <position>150,845</position>
        </checkbox>

    </window>

    <window name="osdmenueditor">
        <area>0,0,1920,1080</area>

        <imagetype name="fanart">
            <area>0,0,1920,1080</area>
            <filename>Backgrounds/</filename>
        </imagetype>

        <imagetype name="leftpanel_bg">
            <position>-20,0</position>
            <filename>images/editmetadata_leftpanel_bg.png</filename>
        </imagetype>

        <shape name="panel_dark">
            <area>0,0,768,1080</area>
            <fill color="#000000" alpha="80" />
        </shape>

        <shape name="item">
            <area>1620,-14,313,55</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
        </shape>

        <clock name="clock">
            <area>1620,-2,303,50</area>
            <font>basesmall</font>
            <align>allcenter</align>
            <format>%DATE%, %TIME%</format>
        </clock>

        <shape name="infobox">
            <area>35,324,694,310</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
        </shape>

        <textarea name="title" from="basetextarea">
            <area>45,334,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
            <value>Edit On Screen Display</value>
        </textarea>

        <textarea name="subtitle" from="basetextarea">
            <area>45,385,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <value>Select the menu items you want to see by playback mode.</value>
        </textarea>

        <textarea name="leftdesc" from="basetextarea">
            <area>45,44,0,0</area>
            <font>basemedium</font>
            <align>allcenter</align>
            <value>OSD Context</value>
        </textarea>

        <textarea name="rightdesc" from="basetextarea">
            <area>45,44,0,0</area>
            <font>basemedium</font>
            <align>allcenter</align>
            <value>OSD Menu Items</value>
        </textarea>

        <buttonlist name="states" from="baseshapebuttonlist">
            <position>0,669</position>
            <spacing>0</spacing>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <layout>vertical</layout>
        </buttonlist>

        <buttonlist name="categories" from="baseshapebuttonlistwide">
            <statetype name="buttonitem">
                <state name="active">
                    <statetype name="buttoncheck">
                        <area>0,0,20,50</area>
                        <state type="off" />
                        <state type="half" />
                        <state type="full">
                            <shape name="plfill">
                                <type>box</type>
                                <area>4,4,6,43</area>
                                <fill color="#0767AB" alpha="230" />
                            </shape>
                        </state>
                    </statetype>
                    <textarea name="buttontext">
                        <area>25,9,900,40</area>
                        <align>vcenter,left</align>
                        <font>basesmall</font>
                        <alpha>100</alpha>
                    </textarea>
                </state>
                <state name="selected" from="active">
                    <shape name="item">
                        <fill color="#0767AB" alpha="240" />
                    </shape>
                    <statetype name="buttoncheck">
                        <area>0,0,20,51</area>
                        <state type="off" />
                        <state type="half" />
                        <state type="full">
                            <shape name="plfill">
                                <type>box</type>
                                <area>4,4,6,43</area>
                                <fill color="#FFFFFF" alpha="230" />
                            </shape>
                        </state>
                    </statetype>
                    <textarea name="buttontext">
                        <font>basesmall</font>
                        <alpha>255</alpha>
                    </textarea>
                </state>
                <state name="inactive" from="active">
                    <shape name="item">
                        <fill color="#222222" alpha="180" />
                    </shape>
                    <textarea name="buttontext">
                        <alpha>200</alpha>
                        <font>basesmall</font>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>

        <button name="done" from="basebutton">
            <position>310,520</position>
            <value>Done</value>
        </button>

    </window>

</mythuitheme>
