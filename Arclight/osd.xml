<mythuitheme>

<!-- Arclight-osd -->

    <window name="osd_message">
        <area>1200,60,706,298</area>

        <shape name="panel_dark">
            <area>15,15,676,268</area>
            <fill color="#000000" alpha="150" />
        </shape>

        <imagetype name="entry_bg">
            <position>0,0</position>
            <filename>images/textentry_bg.png</filename>
        </imagetype>

        <textarea name="message_text" from="basetextarea">
            <area>53,80,600,150</area>
            <font>basenormal</font>
            <align>allcenter</align>
            <multiline>true</multiline>
        </textarea>

        <imagetype name="entry_overlay">
            <position>0,0</position>
            <filename>images/textentry_overlay.png</filename>
        </imagetype>

    </window>

    <window name="osd_input">
        <area>1200,60,706,298</area>

        <shape name="panel_dark">
            <area>15,15,676,268</area>
            <fill color="#000000" alpha="150" />
        </shape>

        <imagetype name="entry_bg">
            <position>0,0</position>
            <filename>images/textentry_bg.png</filename>
        </imagetype>

        <textarea name="osd_number_entry" from="basetextarea">
            <area>53,80,600,150</area>
            <font>basegothicmedium</font>
            <align>allcenter</align>
            <multiline>true</multiline>
        </textarea>

        <imagetype name="entry_overlay">
            <position>0,0</position>
            <filename>images/textentry_overlay.png</filename>
        </imagetype>

    </window>

    <window name="program_info">
        <area>0,0,1920,1080</area>

        <imagetype name="leftpanel_bg">
            <position>-20,0</position>
            <filename>images/editmetadata_leftpanel_bg.png</filename>
        </imagetype>

        <shape name="panel_dark">
            <area>0,0,768,1080</area>
            <fill color="#000000" alpha="230" />
        </shape>

        <shape name="infobox">
            <area>35,13,694,1033</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="180" />
        </shape>

        <shape name="item">
            <area>1620,-14,313,55</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="220" />
        </shape>

        <clock name="clock">
            <area>1620,-2,303,50</area>
            <font>basesmall</font>
            <align>allcenter</align>
            <format>%DATE%, %TIME%</format>
        </clock>

        <imagetype name="iconpath">
            <area>535,860,174,174</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>45,54,674,60</area>
            <font>basegothicmedium</font>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="subtitle" from="basetextarea">
            <area>45,105,674,57</area>
            <multiline>yes</multiline>
            <font>basegothicmidblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="starttime" from="basetextarea">
            <area>45,145,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <template>%STARTTIME%-%ENDTIME%, %RECSTARTDATE%</template>
        </textarea>

        <textarea name="channel" from="basetextarea">
            <area>45,180,674,57</area>
            <multiline>yes</multiline>
            <font>basesmalllightblue</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="description" from="basetextarea">
            <area>45,230,674,430</area>
            <multiline>yes</multiline>
            <font>basesmall</font>
            <align>left,top</align>
            <cutdown>yes</cutdown>
        </textarea>

    </window>

    <window name="osd_status">
        <area>838,736,1029,312</area>

        <imagetype name="entry_bg">
            <position>0,0</position>
            <filename>images/osd_bg.png</filename>
        </imagetype>

        <progressbar name="position" from="basewideprogressbar">
            <position>26,186</position>
        </proressbar>

        <imagetype name="entry_overlay">
            <position>0,0</position>
            <filename>images/osd_overlay.png</filename>
        </imagetype>

    </window>

</mythuitheme>
